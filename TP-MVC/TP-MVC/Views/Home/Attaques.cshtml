
@{
    ViewBag.Title = "Attaques";
}



<div class="container">
    <h2>Attaques</h2>
    <p>Toutes les attaques présentes dans le jeu sont présentes ici avec leur statistiques:</p>
    <table class="table">
        <thead>
            <tr >
                <th>#</th>
                <th>Nom</th>
                <th>Type</th>
                <th>Dommage</th>
                <th>Vie</th>
                <th>Mana</th>
                <th>Prix</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Attaque a in ViewBag.Attaques)
            {
                <tr>
                    <td>@a.Id</td>
                    <td>@a.NOM_ATTAQUE</td>
                    <td>@a.TYPE</td>
                    <td>@a.VIE_ENNEMI</td>
                    <td>@a.VIE_ALIER</td>
                    <td>@a.MANA</td>
                    <td>@a.PRIX</td>
                </tr>
            }
        </tbody>
    </table>
</div>