
@{
    ViewBag.Title = "Pokemons";
}



<div class="container">
    <h2>Pokemons</h2>
    <p>Tous les pokémons présents dans le jeu sont présents ici avec leur statistiques:</p>
    <table class="table">
        <thead>
            <tr >

                <th>#</th>
                <th>Image</th>
                <th>Nom</th>
                <th>Type</th>
                <th>Vie</th>
                <th>Attaque</th>
                <th>Defense</th>
                <th>Prix</th>
            </tr>
        </thead>
        <tbody>
            @{int i = 0;}
            @foreach (Pokemon a in ViewBag.Pokemons)
            {
                <tr>
                    <td>@a.Id</td>
                    <td><img id="@i" class="pokThumbnail" src="@Url.Content("../../Pokémons/" + @a.PHOTO)" /></td>
                    <td>@a.NOM_POKEMON</td>
                    <td>@a.TYPE</td>
                    <td>@a.VIE</td>
                    <td>@a.ATTAQUE</td>
                    <td>@a.DEFENSE</td>
                    <td>@a.PRIX</td>
                </tr>
                i++;
            }
        </tbody>
    </table>
</div>